#!/bin/sh

set -e

case "$1" in
    configure)
        
	chmod +x /usr/bin/sostat*
	chmod +x /usr/bin/soup
	
	FILE="/etc/update-manager/release-upgrades"
	if [ -f $FILE ]; then
		if grep "^Prompt=lts" $FILE >/dev/null 2>&1; then
			echo "Updating $FILE to avoid prompting for next LTS release."
			sed -i 's|Prompt=lts|Prompt=never|g' $FILE || echo "Error updating $FILE"
	fi
        
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;


    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
